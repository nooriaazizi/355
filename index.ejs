<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/styles.css">
  <title>Trivia Game</title>
</head>
<body>
  <h1>Welcome to the Trivia Game</h1>
  
  <!-- Form to start the trivia game -->
  <form action="/trivia" method="POST">
    
    <!-- Input for the number of questions -->
    <label for="amount">Number of Questions:</label>
    <input type="number" name="amount" id="amount" required><br><br>

    <!-- Dropdown menu for selecting the trivia category -->
    <label for="category">Category:</label>
    <select name="category" id="category" required>
      <!-- Loop through categories to create options -->
      <% for(let category in categories) { %>
        <option value="<%= categories[category] %>"><%= category %></option>
      <% } %>
    </select><br><br>

    <!-- Dropdown menu for selecting the difficulty level -->
    <label for="difficulty">Difficulty:</label>
    <select name="difficulty" id="difficulty" required>
      <option value="easy">Easy</option>
      <option value="medium">Medium</option>
      <option value="hard">Hard</option>
    </select><br><br>

    <!-- Submit button to start the trivia game -->
    <button type="submit">Start Trivia</button>
  </form>
</body>
</html>

